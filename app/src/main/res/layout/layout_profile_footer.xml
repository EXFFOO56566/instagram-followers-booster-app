<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen16dp"
    app:layout_constraintTop_toBottomOf="@+id/view_wallet"
    tools:showIn="@layout/fragment_profile">

    <TextView
        android:id="@+id/label_earn_free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen16dp"
        android:text="Earn free ⭐️"
        android:textAppearance="@style/TextView.AllCaps.Small"
        android:textColor="@color/color_text_secondary_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_watch_video"
        android:layout_width="0dp"
        android:layout_height="112dp"
        android:layout_marginStart="@dimen/dimen16dp"
        android:layout_marginTop="@dimen/dimen10dp"
        android:background="@drawable/background_round_rect"
        app:layout_constraintEnd_toStartOf="@id/view_instagram"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_earn_free">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen16dp"
            android:src="@drawable/ic_video"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/Button.Solid"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen24dp"
            android:layout_margin="@dimen/dimen16dp"
            android:backgroundTint="@color/_7759f0"
            android:paddingHorizontal="@dimen/dimen12dp"
            android:text="+02⭐️"
            android:textSize="@dimen/text_size_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen16dp"
            android:text="Watch a\nvideo Ads"
            android:textAppearance="@style/TextView.Primary.Bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_instagram"
        android:layout_width="0dp"
        android:layout_height="112dp"
        android:layout_marginStart="@dimen/dimen16dp"
        android:layout_marginTop="@dimen/dimen10dp"
        android:layout_marginEnd="@dimen/dimen16dp"
        android:background="@drawable/background_round_rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_watch_video"
        app:layout_constraintTop_toBottomOf="@id/label_earn_free">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen16dp"
            android:src="@drawable/ic_instagram"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/Button.Solid"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen24dp"
            android:layout_margin="@dimen/dimen16dp"
            android:backgroundTint="@color/_7759f0"
            android:paddingHorizontal="@dimen/dimen12dp"
            android:text="+03⭐️"
            android:textSize="@dimen/text_size_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen16dp"
            android:text="Follow us on\nInstagram"
            android:textAppearance="@style/TextView.Primary.Bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/label_about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen16dp"
        android:text="about us"
        android:textAppearance="@style/TextView.AllCaps.Small"
        android:textColor="@color/color_text_secondary_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_watch_video" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen16dp"
        android:layout_marginTop="@dimen/dimen10dp"
        android:layout_marginBottom="@dimen/dimen24dp"
        android:background="@drawable/background_round_rect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_about_us">

        <TextView
            android:id="@+id/label_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen16dp"
            android:layout_marginTop="@dimen/dimen16dp"
            android:text="We are a digital agency specializing in websites, SAAS, mobile applications, branding and online marketing. Working under a standardized design process, we particularly use a user-centered design technique to explore users’ true needs, collaborate with understanding of company strategies as well as revenue models to create possible and measurable solutions. Please contact us via information below:"
            android:textAppearance="@style/TextView.Primary"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/label_portfolio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen16dp"
            android:text="portfolio"
            android:textAppearance="@style/TextView.AllCaps.Small"
            android:textColor="@color/color_text_secondary_dark"
            app:layout_constraintStart_toStartOf="@id/tv_link"
            app:layout_constraintTop_toBottomOf="@id/label_summary" />

        <ImageView
            android:id="@+id/icon_globe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen16dp"
            android:src="@drawable/ic_globe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_portfolio" />

        <TextView
            android:id="@+id/tv_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen16dp"
            android:text="https://www.behance.net/witworkapp"
            android:textAppearance="@style/TextView.Primary"
            android:textColor="@color/black"
            android:textColorLink="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/icon_globe"
            app:layout_constraintStart_toEndOf="@id/icon_globe"
            app:layout_constraintTop_toTopOf="@id/icon_globe" />

        <TextView
            android:id="@+id/label_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen16dp"
            android:text="Email"
            android:textAppearance="@style/TextView.AllCaps.Small"
            android:textColor="@color/color_text_secondary_dark"
            app:layout_constraintStart_toStartOf="@id/tv_link"
            app:layout_constraintTop_toBottomOf="@id/icon_globe" />

        <ImageView
            android:id="@+id/icon_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen16dp"
            android:layout_marginBottom="@dimen/dimen16dp"
            android:src="@drawable/ic_email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_email" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen16dp"
            android:text="hello@witwork.app"
            android:textAppearance="@style/TextView.Primary"
            android:textColor="@color/black"
            android:textColorLink="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/icon_email"
            app:layout_constraintStart_toEndOf="@id/icon_email"
            app:layout_constraintTop_toTopOf="@id/icon_email" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
